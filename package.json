{
  "name": "thread-note-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "bun run --filter backend dev & bun run --filter frontend dev",
    "build": "bun run --filter backend build && bun run --filter frontend build",
    "test": "bun test",
    "test:e2e": "bun run --filter frontend test:e2e",
    "test:load": "bun run --filter backend test:load",
    "db:setup": "bun run --filter backend db:setup",
    "db:migrate": "bun run --filter backend db:migrate",
    "db:seed": "bun run --filter backend db:seed",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
