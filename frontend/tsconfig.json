{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "types": ["vite/client", "vitest/globals", "@playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@thread-note/shared/constants": ["../shared/constants/index.ts"],
      "@thread-note/shared/types": ["../shared/types/index.ts"]
