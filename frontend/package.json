{
  "name": "@thread-note/frontend",
  "version": "1.0.0",
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:web": "vite",
    "dev:test": "vite --mode test",
    "build": "electron-vite build",
    "build:staging": "electron-vite build --mode staging",
    "build:production": "electron-vite build --mode production",
    "build:web": "tsc && vite build",
    "build:web:staging": "tsc && vite build --mode staging",
    "build:web:production": "tsc && vite build --mode production",
    "preview": "electron-vite preview",
    "preview:web": "vite preview",
    "package:mac": "electron-builder --mac",
    "package:mac:staging": "bun run build:staging && electron-builder --mac",
    "package:mac:production": "bun run build:production && electron-builder --mac",
    "deploy:staging": "bun run build:web:staging && wrangler pages deploy dist --project-name=thread-note-frontend-staging",
    "deploy:production": "bun run build:web:production && wrangler pages deploy dist --project-name=thread-note-frontend-production",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.2",
    "@types/dompurify": "^3.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.0.6",
    "hono": "^4.10.4",
    "lucide-react": "^0.546.0",
    "marked": "^11.0.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.5.6",
    "tailwindcss": "4.1.9",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vitest": "^1.0.4"
  }
}
