{
  "appId": "com.threadnote.app",
  "productName": "Thread Note",
  "directories": {
    "output": "release",
    "buildResources": "resources"
  },
  "files": [
    "out/**/*",
    "package.json"
  ],
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.productivity",
    "icon": "resources/icon.png"
  },
  "win": {
    "target": ["nsis"],
    "icon": "resources/icon.ico"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Office",
    "icon": "resources/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
