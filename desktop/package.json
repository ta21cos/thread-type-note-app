{
  "name": "@thread-note/desktop",
  "version": "0.1.0",
  "description": "Desktop Electron app for Thread Note",
  "author": "Thread Note",
  "private": true,
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "package:mac": "bun run build && electron-builder --mac",
    "package:win": "bun run build && electron-builder --win",
    "package:linux": "bun run build && electron-builder --linux"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "28.0.0",
    "electron-builder": "^24.0.0",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}
